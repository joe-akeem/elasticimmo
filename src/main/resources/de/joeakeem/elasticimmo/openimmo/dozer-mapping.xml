<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          	http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<custom-converters>
			<converter type="de.joeakeem.elasticimmo.openimmo.converter.EstateGeoConverter">
				<class-a>de.joeakeem.elasticimmo.openimmo.model.Geo</class-a>
				<class-b>de.joeakeem.elasticimmo.model.EstateGeo</class-b>
			</converter>
			
			<converter type="de.joeakeem.elasticimmo.openimmo.converter.EstateContactConverter">
				<class-a>de.joeakeem.elasticimmo.openimmo.model.Kontaktperson</class-a>
				<class-b>de.joeakeem.elasticimmo.model.EstateContact</class-b>
			</converter>
		</custom-converters>
	</configuration>
	<mapping>
		<class-a>de.joeakeem.elasticimmo.openimmo.model.Immobilie</class-a>
		<class-b>de.joeakeem.elasticimmo.model.Estate</class-b>
		<field>
			<a>verwaltungTechn.objektnrIntern</a>
			<b>id</b>
		</field>
		<field>
			<a>objektkategorie.nutzungsart.WOHNEN</a>
			<b>livingEstate</b>
		</field>
		<field>
			<a>verwaltungTechn.aktion.aktionart</a>
			<b>mode</b>
		</field>
		<field>
			<a>freitexte.objekttitel</a>
			<b>title</b>
		</field>
		<field>
			<a>geo</a>
			<b>estateGeo</b>
		</field>
		<field>
			<a>kontaktperson</a>
			<b>estateContact</b>
		</field>
		<!-- doesn work for some reason :( 
		<field>
			<a get-method="isObjektadresseFreigeben">verwaltungObjekt.objektadresseFreigeben</a>
			<b>showAddress</b>
		</field>
		-->
		<field>
			<a>anhaenge.anhang</a>
			<b>attachments</b>
		</field>
	</mapping>
	<mapping>
		<class-a>de.joeakeem.elasticimmo.openimmo.model.Anhang</class-a>
		<class-b>de.joeakeem.elasticimmo.model.Attachment</class-b>
		<field>
			<a>anhangtitel</a>
			<b>title</b>
		</field>
		<field>
			<a>gruppe</a>
			<b>group</b>
		</field>
		<field>
			<a>location</a>
			<b>location</b>
		</field>
		<field>
			<a>format</a>
			<b>format</b>
		</field>
		<field>
			<a>daten.pfad</a>
			<b>path</b>
		</field>
	</mapping>
</mappings>